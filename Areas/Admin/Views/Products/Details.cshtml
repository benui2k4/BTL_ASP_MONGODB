@model ASP_MongoDB.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <!-- Hình ảnh -->
            <div class="col-md-4 d-flex align-items-center justify-content-center p-4 bg-light">
                <img src="@Url.Content(Model.Image)" class="img-fluid rounded border" style="max-height: 300px; object-fit: contain;" alt="@Model.ProductName" />
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="mb-3 text-primary">🔍 Thông tin chi tiết sản phẩm</h2>

                    <ul class="list-unstyled">
                        <li><strong>Tên sản phẩm:</strong> @Model.ProductName</li>
                        <li><strong>Mã sản phẩm:</strong> <span class="text-muted">@Model.ProductId</span></li>
                        <li><strong>Danh mục sản phẩm:</strong> @Model.CategoryName</li>
                        <li><strong>Thương hiệu:</strong> @Model.BrandName</li>
                        <li><strong>Giá:</strong> <span class="text-danger fw-bold">@string.Format("{0:N0} đ", Model.Price)</span></li>
                        <li><strong>Số lượng còn:</strong> @Model.Quantity</li>
                    </ul>

                    <hr />

                    <h5 class="mb-2"> 📄 Mô tả sản phẩm :</h5>
                    <div class="product-description" style="line-height: 1.6;">
                        @Html.Raw(Model.Description)
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <a href="@Url.Action("Edit", "Products", new { area = "Admin", id = Model.ProductId })" class="btn btn-outline-primary">
                            <i class="fa fa-edit"></i> Sửa
                        </a>
                        <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
