@model Paginate

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="1" asp-route-searchTerm="@ViewBag.SearchTerm">«</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)" asp-route-searchTerm="@ViewBag.SearchTerm">&lt;</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pg="@pge" asp-route-searchTerm="@ViewBag.SearchTerm">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm">&gt;</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.TotalPages)" asp-route-searchTerm="@ViewBag.SearchTerm">»</a>
                </li>
            }
        </ul>
    }
</div>
