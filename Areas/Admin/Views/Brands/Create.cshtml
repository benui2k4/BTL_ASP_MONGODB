@model ASP_MongoDB.Models.Brands

@{
    ViewData["Title"] = "Thêm thương hiệu";
}

<h2>Thêm thương hiệu</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="BrandName" class="control-label">Tên thương hiệu</label>
        <input asp-for="BrandName" class="form-control" />
        <span asp-validation-for="BrandName" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-plus"></i> Thêm mới
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Quay lại
    </a>
</form>
